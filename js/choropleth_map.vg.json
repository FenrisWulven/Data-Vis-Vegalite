{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
  },
  "vconcat":[
    {
      "title": "Current Worldwide Inflation Rates",
      "width": "container",
      "height": 400,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url":  "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "transform": [{"filter": {"param": "time_brush"}}],
          "encoding": {
            "color": {
              "field": "VALUE",
              "type": "quantitative",
              "title": "Inflation Rate",
              "scale": {
                "type": "threshold", 
                "domain": [5, 10, 20, 50],
                "range": ["#ffffd4","#fed98e","#fe9929","#d95f0e","#993404"]
                }  
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"} 
            ]
          },
          "layer": [
            {
              "mark": {"type": "geoshape", "stroke": "white"}
            },
            {
              "transform": [
                {
                  "window": [{"op": "rank", "as": "ranking"}],
                  "sort": [{"field": "VALUE", "order": "descending"}]
                },
                {"filter": "datum.ranking == 1"},
                {
                  "calculate": "'The most inflation of; the selected period: ' + datum['VALUE']",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw, ';')",
                  "as": "text_annotation"
                }
              ],
              "mark": {
                "type": "text",
                "align": "right",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic"
              },
              "encoding": {"text": {"field": "text_annotation"}}
            }
          ]
        }
      ]
    },
    {
      "width": "container",
      "height": 60,
      "mark": "line",
      "title": "Use this line chart to filter out the data based on time",
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "TIME",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "field": "VALUE",
          "axis": {"title": "", "format": "%Y"},
          "title": "Inflation Rate"
        }
      }
    },
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
}

