{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
  },
  "vconcat":[
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 700,
      "height": 340,
      "projection": {"type": "equalEarth", "translate": [330, 185], "scale": 140},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "transform": [
            {
              "lookup": "COUNTRY",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {
              "filter": {"param": "time_brush"}
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "VALUE",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [0,5, 10, 20, 50],
                "range": ["#998ec3","#fdbe85", "#fd8d3c", "#e6550d","#bd0026", "#7f0000"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "temporal", "title": "Time", "timeUnit": "yearmonth"}
            ]
          }
        }
      ]
    },
    {
      "title": "History of Worldwide Inflation Rates",
      "width": 700,
      "height": 120,
      "layer": [
        {
          "params": [
            {
              "name": "Country_selection",
              "select": {
                "type": "point", "fields": ["COUNTRY"]
              },
              "value": "Russia",
              "bind": {
                "input": "select",
                "options": [
                  "Argentina",
                  "China",
                  "Germany",
                  "Russia",
                  "Turkey",
                  "United Kingdom",
                  "United States of America"
                ],
                "name": "Country: "
              }
            }    
          ],
          "transform": [
            {"filter": {"param": "Country_selection"}}
          ],  
          "mark": "line",
          "encoding": {
            "x": {
              "field": "TIME",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "axis": {"title": "", "format": "%Y"}
            },
            "y": {
              "field": "VALUE",
              "type": "quantitative",
              "axis": {
                "title": "Inflation Rate"
              }
            },
            "color": {
              "condition": {
                "param": "Country_selection",
                "field": "COUNTRY", "type": "nominal"
              },
              "value": "white"
            },
            "size": {"value": 3},
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "temporal", "title": "Time", "timeUnit": "yearmonth"}
            ]
          }
        },
        {
          "transform": [
            {
              "window": [
                {
                  "op": "mean",
                  "field": "VALUE",
                  "as": "avg"
                }
              ],
              "frame": [0, 0],
              "ignorePeers": false,
              "sort": [
                {
                  "field": "TIME",
                  "order": "ascending"
                }
              ]
            }
          ],
          "mark": "line",
          "encoding": {
            "x": {
              "field": "TIME",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "axis": {"title": "", "format": "%Y"}
            },
            "y": {
              "field": "avg",
              "type": "quantitative",
              "axis": {
                "title": "Inflation Rate"
              }
            },
            "color": {
              "value": "red"
            },
            "size": {"value": 3}
          }
        },
        {
          "params": [
            { 
              "name": "time_brush", 
              "select": 
              {
                "type": "point","encodings": ["x"], 
                "on": "click","nearest": true
              }
            }
          ],
          "mark": {"type": "point"},
          "encoding": {
            "x": {"field": "TIME","type": "temporal"},
            "opacity": {"value": 0}
          }
        },
        {
          "transform": [{
              "filter": {"and": ["time_brush.TIME", {"param": "time_brush"}]}}
          ],
          "layer": [
            {
              "mark": "rule",
              "encoding": {
                "x": {
                  "field": "TIME",
                  "type": "temporal",
                  "timeUnit": "yearmonth",
                  "axis": {"title": "", "format": "%Y"}
                },
                "color": {"value": "black"},
                "size": {"value": 1}
              }
            },
            {
              "mark": {"type": "text","fontWeight":"normal","align": "left","fontSize": 12, 
                "dx": {"expr": "year(datum['TIME']) > 2019 ? -56 : 7"}},
              "encoding": {
                "x": {"field": "TIME","type": "temporal", "timeUnit": "yearmonth", "axis": {"title": "", "format": "%Y"}},
                "y": {"value": 10},
                "text": {"field": "TIME","type": "temporal","timeUnit": "yearmonth"},
                "color": {"value": "#404040"}
              }
            },
            {
              "transform": [
                {
                  "window": [
                    {
                      "op": "mean",
                      "field": "VALUE",
                      "as": "avg"
                    }
                  ],
                  "frame": [0, 0],
                  "ignorePeers": false,
                  "sort": [
                    {
                      "field": "TIME",
                      "order": "ascending"
                    }
                  ]
                },
                {
                  "calculate": "'Avg. Global: ' + format(datum.avg, '.2f') + '%'",
                  "as": "global"
                }
              ], 
              "mark": {"type": "text","fontWeight":"normal","align": "left","fontSize": 12, 
                "dx": {"expr": "year(datum['TIME']) > 2019 ? -109 : 7"}},
              "encoding": {
                "x": {"field": "TIME","type": "temporal", "timeUnit": "yearmonth", "axis": {"title": "", "format": "%Y"}},
                "y": {"value": 30},
                "text": {"field": "global"},
                "color": {"value": "#404040"}
              }
            }
          ]
        },
        {
          "transform": [
            {
            "filter": {"param": "Country_selection"}
            }
          ], 
          "mark": {"type": "point"},
          "encoding": {
            "x": {"field": "TIME","type": "temporal"},
            "y": {"field": "VALUE","type": "quantitative"},
            "opacity": {"value": 0},
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "temporal", "title": "Time", "timeUnit": "yearmonth"}
            ]
          }
        }
      ]
    }
  ]
}

