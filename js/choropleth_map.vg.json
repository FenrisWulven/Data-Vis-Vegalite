{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
  },
  "vconcat":[
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 800,
      "height": 400,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "transform": [
            {
              "lookup": "COUNTRY",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {
              "filter": {"param": "time_brush"}
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "VALUE",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [0,5, 10, 20, 50],
                "range": ["#998ec3","#fdbe85", "#fd8d3c", "#e6550d","#bd0026", "#7f0000"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "temporal", "title": "Time", "timeUnit": "yearmonth"}
            ]
          }
        }
      ]
    },
    {
      "title": "History of Worldwide Inflation Rates",
      "width": 800,
      "height": 100,
      "params": [
        { 
          "name": "time_brush", 
          "select": 
          {
            "type": "interval","encodings": ["x"]
          }
        },
        {
          "name": "Country_selection",
          "select": {
            "type": "point", "fields": ["COUNTRY"]
          },
          "value": "United States of America",
          "bind": {
            "input": "select",
            "options": [
              "China",
              "Germany",
              "Russia",
              "Turkey",
              "United Kingdom",
              "United States of America"
            ],
            "name": "Country: "
          }
        }       
      ],
      "transform": [
        {
          "filter": {"param": "Country_selection"}
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "TIME",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "field": "VALUE",
          "type": "quantitative",
          "axis": {
            "title": "Inflation"
          }
        },
        "color": {
          "condition": {
            "param": "Country_selection",
            "field": "COUNTRY", "type": "nominal"
          },
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "COUNTRY", "type": "nominal", "title": "Country"},
          {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
          {"field": "TIME", "type": "temporal", "title": "Time", "timeUnit": "yearmonth"}
        ]
      }
    },
    {
      "hconcat": [
        {
          "title": "Largest 5 Inflation Rates",
          "width": 350,
          "height": 100,
          "transform": [
            {
              "filter": {
                "field": "TIME",
                "equal": "2020-08"
              }
            },
            {
              "filter": {
                "field": "VALUE",
                "valid": true
              }
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "rank"
                }
              ],
              "sort": [
                {
                  "field": "VALUE",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": {
                "field": "rank",
                "lte": 5
              }
            }
          ],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "VALUE",
              "type": "quantitative",
              "axis": {
                "title": "Inflation rate"
              }
            },
            "y": {
              "field": "COUNTRY",
              "type": "nominal",
              "sort": {
                "field": "VALUE",
                "op": "mean",
                "order": "descending"
              },
              "axis": {
                "title": "Country"
              }
            },
            "color": {
              "field": "COUNTRY",
              "type": "nominal",
              "scale": {
                "range": ["#1f77b4"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"}
            ]
          }
        },
        {
          "title": "Smallest 5 Inflation Rates",
          "width": 350,
          "height": 100,
          "transform": [
            {
              "filter": {
                "field": "TIME",
                "equal": "2020-08"
              }
            },
            {
              "filter": {
                "field": "VALUE",
                "valid": true
              }
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "rank"
                }
              ],
              "sort": [
                {
                  "field": "VALUE",
                  "order": "ascending"
                }
              ]
            },
            {
              "filter": {
                "field": "rank",
                "lte": 5
              }
            }
          ],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "VALUE",
              "type": "quantitative",
              "axis": {
                "title": "Inflation rate"
              }
            },
            "y": {
              "field": "COUNTRY",
              "type": "nominal",
              "sort": {
                "field": "VALUE",
                "op": "mean",
                "order": "descending"
              },
              "axis": {
                "title": "Country"
              }
            },
            "color": {
              "field": "COUNTRY",
              "type": "nominal",
              "scale": {
                "range": ["#ff7f0e", "#2ca02c"]
              },
              "legend": null
            },
              "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"}
            ]
          }
        }
      ]
    }
  ]
}

