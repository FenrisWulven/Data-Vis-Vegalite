{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
  },
  "vconcat":[
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 400,
      "height": 200,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
        "mark": "geoshape",
        "encoding": {
          "color": {
            "field": "VALUE",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [5, 10, 20, 50],
              "range": ["#ffffd4", "#fed98e", "#fe9929", "#d95f0e", "#993404"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
            {"field": "TIME", "type": "nominal", "title": "Time"}
          ]
        }
      }
      ]
    },
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 400,
      "height": 200,
      "transform": [
        {
          "filter": {
            "field": "COUNTRY",
            "oneOf": ["Russia", "China", "India"]
          }
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "TIME",
          "type": "temporal",
          "axis": {
            "title": "Year"
          }
        },
        "y": {
          "field": "VALUE",
          "type": "quantitative",
          "axis": {
            "title": "Inflation"
          }
        },
        "color": {
          "field": "COUNTRY",
          "type": "nominal",
          "scale": {
            "domain": ["Russia", "China", "India"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
          }
        }
      }
    }
  ]
}

