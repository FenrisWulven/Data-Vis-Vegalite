{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat":[
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 800,
      "height": 400,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
          },
          "transform": [
            {
              "lookup": "COUNTRY",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "VALUE",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [5, 10, 20, 50],
                "range": ["#ffffd4", "#fed98e", "#fe9929", "#d95f0e", "#993404"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"}
            ]
          }
        }
      ]
    },
    {
      "title": "Current Worldwide Inflation Rates",
      "width": 800,
      "height": 100,
      "data": {
        "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
      },
      "transform": [
        {
          "filter": {
            "field": "COUNTRY",
            "oneOf": ["Russia", "China", "India"]
          }
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "TIME",
          "type": "temporal",
          "axis": {
            "title": "Year"
          }
        },
        "y": {
          "field": "VALUE",
          "type": "quantitative",
          "axis": {
            "title": "Inflation"
          }
        },
        "color": {
          "field": "COUNTRY",
          "type": "nominal",
          "scale": {
            "domain": ["Russia", "China", "India"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
          }
        }
      }
    },
    {
      "hconcat": [
        {
          "title": "Largest 5 Inflation Rates",
          "width": 350,
          "height": 100,
          "data": {
            "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
          },
          "transform": [
            {
              "filter": {
                "field": "TIME",
                "equal": "2020-08"
              }
            },
            {
              "filter": {
                "field": "VALUE",
                "valid": true
              }
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "rank"
                }
              ],
              "sort": [
                {
                  "field": "VALUE",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": {
                "field": "rank",
                "lte": 5
              }
            }
          ],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "VALUE",
              "type": "quantitative",
              "axis": {
                "title": "Inflation rate"
              }
            },
            "y": {
              "field": "COUNTRY",
              "type": "nominal",
              "sort": {
                "field": "VALUE",
                "op": "mean",
                "order": "descending"
              },
              "axis": {
                "title": "Country"
              }
            },
            "color": {
              "field": "COUNTRY",
              "type": "nominal",
              "scale": {
                "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"}
            ]
          }
        },
        {
          "title": "Smallest 5 Inflation Rates",
          "width": 350,
          "height": 100,
          "data": {
            "url": "https://raw.githubusercontent.com/FenrisWulven/Data-Vis-Vegalite/master/data/inflation_clean.csv"
          },
          "transform": [
            {
              "filter": {
                "field": "TIME",
                "equal": "2020-08"
              }
            },
            {
              "filter": {
                "field": "VALUE",
                "valid": true
              }
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "rank"
                }
              ],
              "sort": [
                {
                  "field": "VALUE",
                  "order": "ascending"
                }
              ]
            },
            {
              "filter": {
                "field": "rank",
                "lte": 5
              }
            }
          ],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "VALUE",
              "type": "quantitative",
              "axis": {
                "title": "Inflation rate"
              }
            },
            "y": {
              "field": "COUNTRY",
              "type": "nominal",
              "sort": {
                "field": "VALUE",
                "op": "mean",
                "order": "descending"
              },
              "axis": {
                "title": "Country"
              }
            },
            "color": {
              "field": "COUNTRY",
              "type": "nominal",
              "scale": {
                "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
              }
            },
            "tooltip": [
              {"field": "COUNTRY", "type": "nominal", "title": "Country"},
              {"field": "VALUE", "type": "quantitative", "title": "Inflation Rate"},
              {"field": "TIME", "type": "nominal", "title": "Time"}
            ]
          }
        }
      ]
    }
  ]
}

